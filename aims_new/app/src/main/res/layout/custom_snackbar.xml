<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTintMode="src_over"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="6dp"
        android:backgroundTint="#fff"
        android:id="@+id/linearLayout"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <at.markushi.ui.CircleButton
                android:layout_width="74dip"
                android:layout_height="74dip"
                android:src="@drawable/ic_action_pen"
                app:cb_color="@color/check_buttons"
                android:id="@+id/circle_btn1"
                app:cb_pressedRingWidth="8dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="EditText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <at.markushi.ui.CircleButton
                android:layout_width="74dip"
                android:layout_height="74dip"
                android:src="@drawable/ic_action_select_white"
                app:cb_color="@color/check_buttons"
                android:id="@+id/circle_btn2"
                app:cb_pressedRingWidth="8dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="CheckBox"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <at.markushi.ui.CircleButton
                android:layout_width="74dip"
                android:layout_height="74dip"
                android:src="@drawable/ic_action_textview"
                app:cb_color="@color/check_buttons"
                android:id="@+id/circle_btn4"
                app:cb_pressedRingWidth="8dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="TextView"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <at.markushi.ui.CircleButton
                android:layout_width="74dip"
                android:layout_height="74dip"
                android:src="@drawable/ic_action_camera"
                app:cb_color="@color/check_buttons"
                android:id="@+id/circle_btn6"
                app:cb_pressedRingWidth="8dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="Camera"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <at.markushi.ui.CircleButton
                android:layout_width="74dip"
                android:layout_height="74dip"
                android:src="@drawable/ic_action_signature"
                app:cb_color="@color/check_buttons"
                android:id="@+id/circle_btn8"
                app:cb_pressedRingWidth="8dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="Signature"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <at.markushi.ui.CircleButton
                android:layout_width="74dip"
                android:layout_height="74dip"
                android:src="@drawable/ic_action_date"
                android:id="@+id/circle_btn9"
                app:cb_color="@color/check_buttons"
                app:cb_pressedRingWidth="8dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="Date"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <at.markushi.ui.CircleButton
                android:layout_width="74dip"
                android:layout_height="74dip"
                android:src="@drawable/ic_action_time"
                app:cb_color="@color/check_buttons"
                android:id="@+id/circle_btn10"
                app:cb_pressedRingWidth="8dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="Time"/>

        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>